<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/recipe_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/default_recipe_pic" />

    <TextView
        android:id="@+id/recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/recipe_pic"
        android:text="干烧排骨"
        android:textColor="@color/Black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/recipe_class"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_name"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/recipe_pic"
        android:background="@drawable/background_label"
        android:padding="5dp"
        android:text="干烧类" />

    <TextView
        android:id="@+id/recipe_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="10dp"
        android:text="2018-12-19  9:27:23"
        android:textColor="@color/Black" />
</RelativeLayout>