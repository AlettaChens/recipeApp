<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/video_pic"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@mipmap/video_logo" />

    <TextView
        android:id="@+id/video_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_toEndOf="@id/video_pic"
        android:text="干烧排骨"
        android:textColor="@color/Black"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/video_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/video_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@id/video_pic"
        android:text="2018-12-19  9:27:23"
        android:textColor="@color/Black" />

    <CheckBox
        android:id="@+id/checkState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="20dp"
        android:button="@drawable/selector_inspect_statue" />

</RelativeLayout>